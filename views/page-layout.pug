extends html-layout
include mixins/navLink

block body
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigationn
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")
                    img(alt="inYacht", src="/img/logo-small.png")
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    +navLink(sitemap.aboutUs)
                    +navLink(sitemap.search)
                    li(class={dropdown: true, active: sitemap.yachting.id === sitemap[currentRouteId].parentRouteId})
                        a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                            | #{sitemap.yachting.menuItem}
                            span.caret

                        ul.dropdown-menu
                            li
                                a(href=sitemap.faq.route) #{sitemap.faq.menuItem}
                            li
                                a(href=sitemap.news.route) #{sitemap.news.menuItem}
                            li
                                a(href=sitemap.destinations.route) #{sitemap.destinations.menuItem}
                            li
                                a(href=sitemap.weather.route) #{sitemap.weather.menuItem}
                    +navLink(sitemap.courses)
                    +navLink(sitemap.contact)

    block content

        #{sitemap}

