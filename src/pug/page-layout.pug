extends html-layout
include mixins/navLink

append styles
    // Custom styles for this template
    link(href="./css/bootstrap/dashboard.css", rel="stylesheet")
    link(href="./css/bootstrap/index.css", rel="stylesheet")

block body
    block globals

    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigationn
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="index")
                    img(alt="inYacht", src="img/logo-small.png")
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    +navLink("./index", "index", "O nás")
                    +navLink("./vyhledavac", "vyhledavac", "Vyhledávač")
                    li(class={dropdown: true, active: "jachting" === currentRoute})
                        a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                            | Jachting
                            span.caret

                        ul.dropdown-menu
                            li
                                a(href="faq") Časté otázky
                            li
                                a(href="novinky") Novinky
                            li
                                a(href="destinace") Oblíbené destinace
                            li
                                a(href="pocasi") Počasí na moři
                    +navLink("./kurzy", "kurzy", "Kapitánske kurzy")
                    +navLink("./kontakt", "kontakt", "Kontakt")

    block content

    footer.footer
        .container
            .row
                .col-md-4.col-sm-6
                    p O nás
                .col-md-4.col-sm-6
                    p Námořní jachting
                .col-md-4.col-sm-6
                    p Kontakt

        .container.copyright
            .row
                .col-sm-12

                        p Developed by
                        p
                            b @Suzii
