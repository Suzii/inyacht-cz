extends html-layout
include mixins/navLink

block body
    block globals

    nav.navbar.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigationn
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")
                    img(alt="inYacht", src="img/logo-inverse-small.png")
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    +navLink("./onas", "onas", "O nás")
                    +navLink("./vyhledavac", "vyhledavac", "Vyhledávač")
                    li(class={dropdown: true, active: "jachting" === currentRoute})
                        a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                            | Námořní jachting
                            span.caret

                        ul.dropdown-menu
                            li
                                a(href="faq") Časté otázky
                            li
                                a(href="novinky") Novinky
                            li
                                a(href="destinace") Oblíbené destinace
                            li
                                a(href="pocasi") Počasí na moři
                    +navLink("./kurzy", "kurzy", "Kapitánske kurzy")
                    +navLink("./kontakt", "kontakt", "Kontakt")

    block content

    footer.footer
        .site-info#site-info
            .container
                .row
                    .col-md-6.col-sm-6.col-xs-12.sitemap#sitemap
                        .row.sitemap-row
                            .col-sm-6.col-xs-6
                                h4
                                    a(href="/") Úvod
                                h4
                                    a(href="/onas") O nás
                                h4
                                    a(href="./vyhledavac") Vyhledávač
                                h4
                                    a(href="./faq") Námořní jachting
                                h4
                                    a(href="./kurzy") Kapitánske kurzy
                                h4
                                    a(href="./kontakt") Kontakt
                            .col-sm-6.col-xs-6.logo-container.hidden-xs
                                img.logo(src="/img/footer-logo.png")
