extends html-layout
include mixins/navLink
append styles
    // Custom styles for this template
    link(href="./css/bootstrap/dashboard.css", rel="stylesheet")
    link(href="./css/bootstrap/index.css", rel="stylesheet")

block body
    block globals

    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigationn
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="index.html")
                    img(alt="inYacht", src="img/logo-small.png")
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    +navLink("./index.html", "index", "O nás")
                    +navLink("./vyhledavac.html", "vyhledavac", "Online vyhledávač")
                    li(class={dropdown: true, active: "jachting" === currentRoute})
                        a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                            | Námořní jachting
                            span.caret

                        ul.dropdown-menu
                            li
                                a(href="faq.html") Časté otázky
                            li
                                a(href="novinky.html") Novinky
                            li
                                a(href="destinace.html") Oblíbené destinace
                            li
                                a(href="pocasi.html") Počasí na moři
                    +navLink("./kurzy.html", "kurzy", "Kapitánske kurzy")
                    +navLink("./kontakt.html", "kontakt", "Kontakt")

    block content
