extends ../page-layout
include ../mixins/newsPostPreview

block content
    .container-fluid.no-padding
        .cover-video
            video(
            type="video/mp4"
            src=item.coverVideo.value[0].url
            poster="/img/cover-poster.png"
            loop
            autoplay
            muted
            )

    .container-fluid.no-padding
        .row
            .col-sm-12
                .booking-manager__container--small
                    iframe(
                        width="100%"
                        height="110"
                        frameborder="0"
                        scrolling="auto"
                        src="https://www.booking-manager.com/wbm2/page.html?companyid=2957&setlang=cs&view=SmallSearchForm&target=_blank&customCssPath=https://inyacht-preview.herokuapp.com/css/booking-manager-small.css"
                        allowTransparency="true"
                        )
    .container
        .row
            .col-sm-12
                h1#novinky.page-header.navigable-element #{item.newsPage[0].pTitle.value}

                p.lead #{item.newsPage[0].pLeadingParagraph.value}

        .row
            .col-sm-12
                | !{item.newsPage[0].pBody.getHtml()}


        .row
            .col-sm-12
                each post in posts
                    +newsPostPreview(post)
