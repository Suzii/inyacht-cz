extends html-layout
include mixins/navLink
include mixins/social-facebook
include mixins/social-instagram
include mixins/social-twitter

block body
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigationn
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")
                    img(alt="inYacht", src="/img/logo-small.png")
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    +navLink(sitemap.aboutUs)
                    +navLink(sitemap.search)
                    +navLink(sitemap.faq)
                    +navLink(sitemap.contact)
                    li
                        +social-facebook(contactData, 20, "header")
                    li
                        +social-instagram(contactData, 20, "header")
                    li
                        +social-twitter(contactData, 20, "header")
    block content

    footer.footer
        .site-info#site-info
            .container
                .row
                    .col-md-6.col-sm-6.col-xs-12.sitemap#sitemap
                        .row.sitemap-row
                            .col-sm-6.col-xs-6
                                h4
                                    a(href=sitemap.index.route) #{sitemap.index.menuItem}
                                h4
                                    a(href=sitemap.aboutUs.route) #{sitemap.aboutUs.menuItem}
                                h4
                                    a(href=sitemap.search.route) #{sitemap.search.menuItem}
                                h4
                                    a(href=sitemap.faq.route) #{sitemap.faq.menuItem}
                                h4
                                    a(href=sitemap.contact.route) #{sitemap.contact.menuItem}
                            .col-sm-6.col-xs-6.logo-container.hidden-xs
                                img.logo(src="/img/footer-logo.png")

                    .col-md-6.col-sm-6.col-xs-12.contact#contact
                        .row
                            .col-xs-12.col-sm-6
                                h4 Kontaktujte nás
                                p
                                    a(href="mailto:"+contactData.email.value).email #{contactData.email.value}
                                p
                                    | #{contactData.phoneNumber.value}

                            .col-xs-12.col-sm-6
                                h4.hidden-xs Odebírejte novinky
                                p
                                    +social-facebook(contactData, 35, "footer")
                                    +social-instagram(contactData, 35, "footer")
                                    +social-twitter(contactData, 35, "footer")


        .copyright#copyright
            .container
                .row
                    .col-sm-12
                            p Developed by <a href="mailto:admin@inyacht.cz">@Suzii</a>
