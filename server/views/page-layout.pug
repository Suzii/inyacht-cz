extends html-layout
include mixins/navLink

block body
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigationn
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/")
                    img(alt="inYacht", src="/img/logo-small.png")
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    +navLink(sitemap.aboutUs)
                    +navLink(sitemap.search)
                    +navLink(sitemap.news)

                    li(class={ active: sitemap.faq.id === currentRouteId })
                        a(href=sitemap.faq.route)
                            span.hidden-sm Námořní
                            |  jachting

                    +navLink(sitemap.contact)

    block content

    footer.footer
        .site-info#site-info
            .container
                .row
                    .col-md-6.col-sm-6.col-xs-12.sitemap#sitemap
                        .row.sitemap-row
                            .col-sm-6.col-xs-6
                                h4
                                    a(href="/") Úvod
                                h4
                                    a(href="/onas") O nás
                                h4
                                    a(href="./vyhledavac") Vyhledávač
                                h4
                                    a(href="./faq") Námořní jachting
                                h4
                                    a(href="/#novinky") Novinky
                                h4
                                    a(href="./kontakt") Kontakt
                            .col-sm-6.col-xs-6.logo-container.hidden-xs
                                img.logo(src="/img/footer-logo.png")

                    .col-md-6.col-sm-6.col-xs-12.contact#contact
                        .row
                            .col-xs-12.col-sm-6
                                h4 Kontaktujte nás
                                p
                                    a(href="mailto:charter@inyacht.cz").email charter@inyacht.cz
                                p
                                    | +420 123 456 789

                            .col-xs-12.col-sm-6
                                h4.hidden-xs Odebírejte novinky
                                p
                                    a(href="TODO") Facebook&nbsp;|&nbsp;
                                    a(href="TODO") Instagram
                                    a(href="TODO") Twitter

        .copyright#copyright
            .container
                .row
                    .col-sm-12
                            p Developed by <a href="mailto:admin@inyacht.cz">@Suzii</a>
